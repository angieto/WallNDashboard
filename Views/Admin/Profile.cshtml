@model TheWall.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <title>The Wall</title>
</head>
<body>
    <div class="container-fluid">
        <!-- NavBar -->
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:rosybrown;">
            <a class="navbar-brand" href="/">The Wall</a>
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard/admin">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/edit">Profile</a>
                </li>
            </ul>
            <div class="ml-auto">
                <ul style="list-style-type: none;">
                    <li class="nav-item float-right">
                        <a class="nav-link text-white float-right" href="/logout">Log off</a>
                    </li>
                </ul>  
            </div> 
        </nav>
        <div class="container mx-auto my-5">
            <h3 class="text-info">Edit Profile</h3>
            <hr>
            <div class="container my-5 mx-auto row">
                <!-- Avarta -->
                <div class="col-5 mx-auto">
                    <div class="container border rounded py-5">
                        <!-- User's current Img Url -->
                        <div class="container text-center col-10 mt-3">
                            @if(@ViewBag.User.AvartaUrl == null)
                            {
                                <img class="border rounded" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" height="250" width="250">
                            } else {
                                <img class="border rounded" src="@ViewBag.User.AvartaUrl" height="250" width="250">
                            }
                            
                        </div>
                        <!-- User's to-be-updated Img Url -->
                        <div class="col-9 mx-auto">
                            <form class="form-group mt-5 d-flex align-items-center flex-column justify-content-center">
                                <input type="file" class="custom-file-input">
                                <label class="custom-file-label">Choose image file...</label>
                            </form>
                            <form class="form-group mt-4 d-flex align-items-center flex-column justify-content-center" asp-controller="Admin" asp-action="AddAvarta" method="post">
                                <input type="text" asp-for="AvartaUrl" class="form-control" placeholder="Image Url">
                                <div class="row">
                                    <button type="submit" class="btn btn-success mt-5 mx-2 d-inline">Update</button>
                                    <a class="btn btn-danger mt-5 mx-2 d-inline" href="/dashboard">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Info -->
                <div class="col-7">
                    <form class="form-group d-flex align-items-center flex-column justify-content-center border rounded ml-5 px-3 py-5" asp-action="UpdateProfile" asp-controller="Admin" method="post">
                        <span class="text-danger mt-3" asp-validation-for="FirstName"></span>
                        <input type="text" class="form-control col-8 mt-3" asp-for="FirstName" placeholder="First Name">
        
                        <span class="text-danger mt-3" asp-validation-for="LastName"></span>
                        <input type="text" class="form-control col-8 mt-3" asp-for="LastName" placeholder="Last Name">
        
                        <span class="text-danger mt-3" asp-validation-for="Email"></span>
                        <input type="text" class="form-control col-8 mt-3" asp-for="Email" placeholder="Email">
        
                        <span class="text-danger mt-3" asp-validation-for="Password"></span>
                        <input type="password" class="form-control col-8 mt-3" asp-for="Password" placeholder="Password">
        
                        <span class="text-danger mt-3" asp-validation-for="Confirm"></span>
                        <input type="password" class="form-control col-8 mt-3" asp-for="Confirm" placeholder="Confirm Password">

                        <span class="text-danger mt-3" asp-validation-for="Description"></span>
                        <textarea type="text" class="form-control col-8 mt-3" asp-for="Description" placeholder="Describe yourself"></textarea>
                        
                        <div class="row">
                            <button type="submit" class="btn btn-success mt-5 mx-2 d-inline">Update</button>
                            <a class="btn btn-danger mt-5 mx-2 d-inline" href="/dashboard">Cancel</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>