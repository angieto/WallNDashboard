<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <title>The Wall</title>
</head>
<body>
    <div class="container-fluid mb-5">
    <!-- NavBar -->
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:rosybrown;">
            <a class="navbar-brand" href="/">The Wall</a>
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard/admin">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/edit">Profile</a>
                </li>
            </ul>
            <div class="ml-auto">
                <ul style="list-style-type: none;">
                    <li class="nav-item float-right">
                        <a class="nav-link text-white float-right" href="/logout">Log off</a>
                    </li>
                </ul>  
            </div> 
        </nav>

        <!-- User Info -->
        <!-- User Info -->
        <div class="container row mx-auto mt-5">
            <div class="container col-1 d-flex align-items-center">
                @if(@ViewBag.SelectedUser.AvartaUrl == null)
                {
                    <img class="rounded-circle" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" height="155" width="155">
                }
                <img class="border rounded-circle" src="@ViewBag.SelectedUser.AvartaUrl" height="155" width="155">
            </div>
            <div class="container col-6">
                <h3 class="mt-3">@ViewBag.SelectedUser.FirstName @ViewBag.SelectedUser.LastName</h3>
                <hr>
                <p><h6 class="mt-3 d-inline">Register at:</h6> @ViewBag.SelectedUser.CreatedAt</p>
                <p><h6 class="mt-3 d-inline">Email address:</h6> @ViewBag.SelectedUser.Email</p>
                @if (@ViewBag.SelectedUser.Description != "") 
                {
                    <p><h6 class="mt-3 d-inline">Description:</h6> @ViewBag.SelectedUser.Description</p>
                }
            </div>
        </div>

        <!-- MSG BOX -->
        <div class="container mx-auto mt-5">
            <h4>Leave a message for @ViewBag.SelectedUser.FirstName</h4>
            <!-- Post msg here -->
            <div class="container mx-auto my-5">
                @await Html.PartialAsync("Post.cshtml")
            </div>
        </div>

        <!-- MSG and CMT Histories -->
        @await Html.PartialAsync("MsgNCmt.cshtml")
    </div>
</body>
</html>